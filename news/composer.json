{
	"name": "butterfly-effect/news",
	"type": "platform-extension",
	"description": " Manage news displayed on the frontend ",
	"authors": [
		{
			"name": "Alaa M. El-Kabbany",
			"email": "amk.elkabbany@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cartalyst/composer-installers": "1.2.*",
		"illuminate/support": "~5.0",
		"platform/foundation": "~2.0|~3.0"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"ButterflyEffect\\News\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
